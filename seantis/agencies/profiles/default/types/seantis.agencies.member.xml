<?xml version="1.0"?>
<object name="seantis.agencies.member" meta_type="Dexterity FTI"
        xmlns:i18n="http://xml.zope.org/namespaces/i18n"
        i18n:domain="seantis.agencies">

  <!-- Basic metadata -->
  <property name="title" i18n:translate="">Agency Member</property>
  <property name="icon_expr">string:${portal_url}/user.png</property>
  <property name="global_allow">True</property>
  <property name="filter_content_types">True</property>
  <property name="allowed_content_types"></property>

  <!-- schema interface -->
  <property name="schema">seantis.agencies.types.IMember</property>

  <!-- class used for content items -->
  <property name="klass">seantis.agencies.types.Member</property>

  <!-- add permission -->
  <property name="add_permission">cmf.AddPortalContent</property>

  <!-- enabled behaviors -->
  <property name="behaviors">
    <element value="seantis.people.interfaces.INameFromPerson" />
    <element value="seantis.people.interfaces.IPerson" />
    <element value="plone.app.dexterity.behaviors.exclfromnav.IExcludeFromNavigation"/>
  </property>

</object>
